<div class="container-fluid">
  <h2>New Topic</h2>
</div>
<div class="container-fluid">
  <%= form_for @topic do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control', placeholder: "Enter Topic", autofocus: true %>
    </div>
    <div class="form-group js-topic-title">
      <%= f.submit "Save", class: 'btn btn-success' %>
    </div>
   <% end %>
  </div>
 </div>
</div>
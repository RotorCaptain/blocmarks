<div class="panel panel-default">
  <div class="panel-heading"><h1>User's Profile</h1>
  </div>
  <div class="panel-body">
    
  <h2>Your Bookmarks:</h2>

    <div class="row">
  
      <% @user_bookmarks.each do |bookmark| %>
      <div class="col-md-4">
        <h3 class="media-heading">
          <h2><%= "#{bookmark.topic.title}" %></h2>
          
          <p><%= link_to bookmark.url, bookmark.url, :target => '_blank' %></p>
          <% link_to "Delete", [bookmark.topic, bookmark], method: :delete, class: 'btn btn-danger' %>
           <%= render partial: 'likes/like', locals: { bookmark: bookmark } %>
          <br>
        </h3>
      </div>
    <% end %>
  </div>

  <h1>Liked Bookmarks:</h1>
    <div class="row">
      <% @liked_bookmarks.each do |bookmark| %>
        <div class="col-md-4">
          <h3 class="media-heading">
            <h2><%= "#{bookmark.topic.title}" %></h2>
            <br>
            <p><%= link_to bookmark.url, bookmark.url, :target => '-blank' %></p>
            <%= render partial: 'likes/like', locals: { bookmark: bookmark } %>
            <br>
          </h3>
        </div>
      <% end %>
    </div>

  <div class="panel-footer">
    <br>
  </div>
</div>